.btn-icon
  &
    width 40px
    height @width
    border-radius 50%
    border 2px solid white
    color white
    display block
    line-height 36px
    font-size (@width / 2)
    text-align center
    vertical-align middle
    margin 10px
    display inline-block
    cursor pointer
  &:hover
  &:active
  &.active
    color black
    background white
    text-decoration none